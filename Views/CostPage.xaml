<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:FastCost.Models"
             x:Class="FastCost.Views.CostPage"
             Title="Cost">

    <ContentPage.BindingContext>
        <models:CostModel />
    </ContentPage.BindingContext>


    <VerticalStackLayout Spacing="10" Margin="10">
        
        <!-- // test -->
        <!-- <Label FontSize="22" FontAttributes="Bold" Text="{Binding Title}" VerticalOptions="End" /> -->
        <!-- <Label FontSize="22" Text="{Binding Version}" VerticalOptions="End" /> -->
        <!-- // test -->

        <Editor x:Name="CostValueEditor"
                Placeholder="Enter cost value"
                Text="{Binding Value}"
                FontSize="28" 
                FontAttributes="Bold"  
                HorizontalTextAlignment="Center"/>

        <Editor x:Name="DescriptionEditor"
                Placeholder="Enter cost description"
                Text="{Binding Description}"
                FontSize="20"
                HeightRequest="80" />

        <Grid ColumnDefinitions="*,*" ColumnSpacing="4">
            <Button Text="Save"
                    Clicked="SaveButton_Clicked" />

            <Button Grid.Column="1"
                    Text="Delete"
                    Clicked="DeleteButton_Clicked" />
        </Grid>

        <Label Text="Select category level 1:" FontSize="28" Padding="15" HorizontalTextAlignment="Center" />

        <Grid  RowSpacing="10" ColumnSpacing="5" Padding="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Text="🌅" FontSize="72" Grid.Column="0" Grid.Row="0" />
            <Label Text="☀️" FontSize="72" Grid.Column="1" Grid.Row="0" />
            <Label Text="🌇" FontSize="72" Grid.Column="2" Grid.Row="0" />
            <Label Text="🌅" FontSize="72" Grid.Column="3" Grid.Row="0" />

            <Label Text="Sunrise" FontAttributes="Bold" Grid.Column="0" Grid.Row="1" HorizontalTextAlignment="Center" />
            <Label Text="Daylight" FontAttributes="Bold" Grid.Column="1" Grid.Row="1" HorizontalTextAlignment="Center" />
            <Label Text="Sunset" FontAttributes="Bold" Grid.Column="2" Grid.Row="1" HorizontalTextAlignment="Center" />
            <Label Text="Sunset2" FontAttributes="Bold" Grid.Column="3" Grid.Row="1" HorizontalTextAlignment="Center" />

            <Label Text="🌅" FontSize="72" Grid.Column="0" Grid.Row="2" />
            <Label Text="☀️" FontSize="72" Grid.Column="1" Grid.Row="2" />
            <Label Text="🌇" FontSize="72" Grid.Column="2" Grid.Row="2" />
            <Label Text="🌅" FontSize="72" Grid.Column="3" Grid.Row="2" />

            <Label Text="Sunrise" FontAttributes="Bold" Grid.Column="0" Grid.Row="3" HorizontalTextAlignment="Center" />
            <Label Text="Daylight" FontAttributes="Bold" Grid.Column="1" Grid.Row="3" HorizontalTextAlignment="Center" />
            <Label Text="Sunset" FontAttributes="Bold" Grid.Column="2" Grid.Row="3" HorizontalTextAlignment="Center" />
            <Label Text="Sunset2" FontAttributes="Bold" Grid.Column="3" Grid.Row="3" HorizontalTextAlignment="Center" />

            <Label Text="🌅" FontSize="72" Grid.Column="0" Grid.Row="3" />
            <Label Text="☀️" FontSize="72" Grid.Column="1" Grid.Row="3" />
            <Label Text="🌇" FontSize="72" Grid.Column="2" Grid.Row="3" />
            <Label Text="🌅" FontSize="72" Grid.Column="3" Grid.Row="4" />

            <Label Text="Sunrise" FontAttributes="Bold" Grid.Column="0" Grid.Row="4" />
            <Label Text="Daylight" FontAttributes="Bold" Grid.Column="1" Grid.Row="4" />
            <Label Text="Sunset" FontAttributes="Bold" Grid.Column="2" Grid.Row="4" />
            <Label Text="Sunset2" FontAttributes="Bold" Grid.Column="2" Grid.Row="4" />

            <!-- <Label x:Name="lblSunrise" WidthRequest="100" FontAttributes="None" Grid.Column="0" Grid.Row="2" HorizontalTextAlignment="Center" /> -->
            <!-- <Label x:Name="lblDaylight" WidthRequest="150" FontAttributes="None" Grid.Column="1" Grid.Row="2" HorizontalTextAlignment="Center" /> -->
            <!-- <Label x:Name="lblSunset" WidthRequest="100" FontAttributes="None" Grid.Column="2" Grid.Row="2" HorizontalTextAlignment="Center" /> -->
            <!-- <Label x:Name="lblSunset2" WidthRequest="100" FontAttributes="None" Grid.Column="3" Grid.Row="2" HorizontalTextAlignment="Center" /> -->
        </Grid>
    </VerticalStackLayout>
</ContentPage>