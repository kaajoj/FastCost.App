<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FastCost.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Add cost"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <StackLayout>
                <Button Text="+" FontSize="Large" BackgroundColor="Lime" 
                        TextColor="White" CornerRadius="40" WidthRequest="80" HeightRequest="80" />
            </StackLayout>

            <Label
                Text="Expenses in {March}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="test"
                FontSize="18"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
